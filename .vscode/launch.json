// A launch configuration that compiles the extension and then opens it inside a new window
{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Launch Extension",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceRoot}/packages/client"
			],
			"stopOnEntry": false,
			"sourceMaps": true,
			"outFiles": ["${workspaceRoot}/packages/client/out/**/*.js"],
			"preLaunchTask": "Compile client"
		},
		{
			"name": "Attach Server",
			"type": "node",
			"request": "attach",
			"port": 6009,
			"sourceMaps": true,
			"outFiles": ["${workspaceRoot}/packages/server/out/server/**/*.js"],
			"protocol": "inspector",
			"trace": true
		}
	]
}
