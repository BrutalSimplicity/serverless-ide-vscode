{
    "name": "serverless-ide",
    "private": true,
    "engines": {
        "vscode": "^1.22.0"
    },
    "devDependencies": {
        "@types/jest": "^23.3.12",
        "husky": "^1.3.1",
        "jest": "^23.6.0",
        "lerna": "^3.0.0-rc.0",
        "prettier": "^1.16.4",
        "ts-jest": "^23.10.5",
        "ts-node": "^5.0.1",
        "tslint": "^5.13.1",
        "tslint-config-prettier": "^1.18.0",
        "typescript": "^3.2.2"
    },
    "workspaces": {
        "packages": [
            "packages/*"
        ],
        "nohoist": [
            "**/@serverless-ide/language-server",
            "**/@serverless-ide/language-server/**"
        ]
    },
    "scripts": {
        "update-vscode": "node ./node_modules/vscode/bin/install",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "jest",
        "pre-commit": "yarn lint:types && yarn test && yarn compile",
        "compile": "lerna run compile",
        "lint:types": "lerna run lint:types",
        "lint:ts": "lerna run lint:ts",
        "lint:prettier": "prettier --check"
    },
    "husky": {
        "hooks": {
            "pre-commit": "yarn pre-commit"
        }
    }
}
